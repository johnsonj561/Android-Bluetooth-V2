<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="#D2D1DC"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusText"
        android:text="Connect A Device\nTo Begin"
        android:textSize="32sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#32313A"
        />

    <Button
        android:id="@+id/enableBluetoothButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/enable_bt_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/viewDevicesButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/select_bt_device_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/connectBluetoothDevice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/connect_device_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewDevicesButton"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/disconnectBluetoothDevice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/disconnect_device_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/ledOnButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/led_on_button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/connectBluetoothDevice"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:background="#00CC00"
        />

    <Button
        android:id="@+id/ledOffButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/led_off_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_below="@id/connectBluetoothDevice"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:background="#CC0000"
        />

    <Button
        android:id="@+id/ledFlashButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/led_flash_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ledOffButton"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:background="#FFCC00"
        />

</RelativeLayout>
