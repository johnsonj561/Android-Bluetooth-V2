<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/pale_pumpkin_background"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusText"
        android:text="Connect A Device To Begin"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#32313A"
        />

    <ImageView
        android:id="@+id/bowlImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/statusText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/not_connected_bowl"
        />

    <Button
        android:id="@+id/enableBluetoothButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/enable_bluetooth_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bowlImageView"
        android:layout_marginTop="25dp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/viewDevicesButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/select_device_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bowlImageView"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/connectBluetoothDevice"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/connect_device_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewDevicesButton"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/disconnectBluetoothDevice"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/disconnect_device_button"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_above="@+id/connectBluetoothDevice"
        android:layout_alignStart="@+id/enableBluetoothButton"/>

    <Button
        android:id="@+id/viewFoodSupply"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/food_supply_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/disconnectBluetoothDevice"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/addFood"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/add_food_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewFoodSupply"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />

</RelativeLayout>
